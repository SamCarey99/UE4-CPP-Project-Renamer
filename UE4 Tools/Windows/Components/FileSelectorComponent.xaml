<UserControl x:Class="UE4_Tools.Windows.Components.FileSelectorComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UE4_Tools.Windows.Components"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.ColumnSpan="2" Fill="#FFEAEAEA" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
        <Label  Grid.Column="0" x:Name="PathBox_L" Content="Default Value" VerticalAlignment="Center"  HorizontalAlignment="Stretch" Margin="10" FontSize="24"/>
        <Button Grid.Column="1" x:Name="Select_btn" Content="Select" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10" FontSize="24" Click="Select_btn_Click"/>
    </Grid>
</UserControl>
